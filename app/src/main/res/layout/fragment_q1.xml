<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- CardView 显示问题与选项 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_q1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Question Text -->
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1. What size of dog do you prefer?"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <RadioGroup
                android:id="@+id/rg_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:id="@+id/radio_ee_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small: less than 20 lb" />

                <RadioButton
                    android:id="@+id/radio_ee_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium: around 35 lb" />

                <RadioButton
                    android:id="@+id/radio_ee_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large: bigger than 35 lb" />

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@id/card_q1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/buttons_barrier_q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btn_next" />

    <TextView
        android:id="@+id/tv_paw_tips_q1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Paw Tips: Dog sizes are typically classified by weight. Small (less than 20lbs), Medium (around 35lbs), and Large (more than 35lbs)."
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttons_barrier_q1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>