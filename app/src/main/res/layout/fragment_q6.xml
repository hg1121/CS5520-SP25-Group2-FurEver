<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_q6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_question6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6. What is your monthly budget for your dog?"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <RadioGroup
                android:id="@+id/rg_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_question6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:id="@+id/radio_budget_under"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Under $400"
                    android:tag="Under $400" />

                <RadioButton
                    android:id="@+id/radio_budget_400_600"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$400–$600"
                    android:tag="$400–600" />

                <RadioButton
                    android:id="@+id/radio_budget_over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Over $600"
                    android:tag="Over $600" />

            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_prev6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        app:layout_constraintTop_toBottomOf="@id/card_q6"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btn_submit6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/card_q6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_q6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btn_prev6,btn_submit6" />

    <TextView
        android:id="@+id/tv_paw_tips_q6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Paw Tips: Budget should cover food, vet, toys, treats and insurance. Plan for surprise vet bills!"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/barrier_q6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
