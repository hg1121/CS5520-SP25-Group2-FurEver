<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_dog"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/placeholder_image"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_breed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beagle"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_match_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95% Match"
        android:textSize="16sp"
        android:textColor="#FF8800"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_why_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why This Breed"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_why"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended because..."
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Care Tips"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Groom daily, avoid heat, etc." />
</LinearLayout>
